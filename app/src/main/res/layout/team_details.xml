<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="15dp"
    android:backgroundTint="#1D2029"
    android:elevation="10dp"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:backgroundTint="#03A9F4">
                <TextView
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/google_form_link"
                    android:text="Google form link"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/par_layout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- or --"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participants Details"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/participate_details_1"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="#6FFFFFFF"
                android:hint="Enter participant Name"
                />
            <EditText
                android:layout_width="match_parent"
                android:textColorHint="#6FFFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/participate_details_2"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"

                android:hint="Enter participant Name"
                />
            <EditText
                android:layout_width="match_parent"
                android:textColorHint="#6FFFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/participate_details_3"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"

                android:hint="Enter participant Name"
                />
            <EditText
                android:layout_width="match_parent"
                android:textColorHint="#6FFFFFFF"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/participate_details_4"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"

                android:hint="Enter participant Name"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter All Team member name. Once you submit, you can't change names."
                android:layout_marginHorizontal="10dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textSize="11dp"

                android:textAlignment="center"
                android:layout_marginTop="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/team_submit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/roundqus"
                android:backgroundTint="@color/yellow"

                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>