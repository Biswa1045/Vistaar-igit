<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".History_gall_Activity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_anim"
    android:id="@+id/rel_his_gall"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/poppins_semibold"
           android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:id="@+id/back_gall_his"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"

            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/his_name_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/p_gallery_his"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_gallery_his"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginTop="50dp" />
</RelativeLayout></RelativeLayout>