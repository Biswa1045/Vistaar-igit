<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
          android:orientation="horizontal">
            <ImageView
                android:id="@+id/event"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_marginLeft="5dp"
                android:layout_width="200dp"
                android:id="@+id/event_details"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="11dp"
                android:id="@+id/event_btn"
                android:layout_weight="1"
                android:text="event poster"
                android:layout_marginTop="20dp"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="11dp"
                android:id="@+id/event_details_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="details image"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_name"
            android:hint="Enter Event name"
            android:layout_marginHorizontal="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Event date,time"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/event_time"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Event location"
            android:id="@+id/event_location"
            android:layout_marginHorizontal="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Event link"
            android:id="@+id/event_link"
            android:layout_marginHorizontal="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment_check"
            android:text="Payment Check"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="upload"
            android:id="@+id/event_upload"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload compressed images."
            android:layout_marginHorizontal="10dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressBar_event"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>